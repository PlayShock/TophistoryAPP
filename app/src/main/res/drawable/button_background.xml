<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#E57373" /> <!-- Цвет для состояния нажатия -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <gradient android:startColor="#bf8c0b" android:endColor="#78756e" android:angle="270" /> <!-- Основной цвет фона -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>