<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TophistoryAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TophistoryAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Другие атрибуты стиля -->
    </style>
    <style name="Theme.TophistoryAPP.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/spacol</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/spa</item>
        <item name="postSplashScreenTheme">@style/Theme.TophistoryAPP.NoActionBar</item>
    </style>
    <style name="Theme.TophistoryAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TophistoryAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>